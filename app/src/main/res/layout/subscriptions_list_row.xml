<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    xmlns:card_view="http://schemas.android.com/tools"
   >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardUseCompatPadding="true"
        card_view:cardElevation="9dp"
        card_view:cardUseCompatPadding="true"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/meal_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="4dp" />

            <TextView
                android:id="@+id/meal_title_txt"
                style="@style/SetPoppinsSemiBoldFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:textSize="16sp"
                android:layout_toEndOf="@+id/meal_img"
                android:text="@string/meal"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/plan_type_txt"
                style="@style/SetPoppinsSemiBoldFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:textSize="14sp"
                android:text="@string/subscription"
                android:layout_toEndOf="@+id/meal_img"
                android:layout_below="@+id/meal_title_txt"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/status_txt"
                style="@style/SetPoppinsLightFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="16dp"
                android:text="Placed"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/order_date_time_txt"
                style="@style/SetPoppinsSemiBoldFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:textSize="14sp"
                android:text="@string/end_date"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/meal_img"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/order_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:textSize="14sp"
                android:layout_alignParentEnd="true"
                android:text="@string/amount"
                style="@style/SetPoppinsLightFont"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/meal_img"
                android:textColor="@color/black" />



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>