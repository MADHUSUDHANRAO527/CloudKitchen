<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kitchen_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:cardUseCompatPadding="true"
    tools:context=".ui.fragments.SubscriptionsFragment"
    card_view:cardElevation="9dp"
    card_view:cardUseCompatPadding="true"
    android:outlineAmbientShadowColor="@color/black"
    android:outlineSpotShadowColor="@color/black"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="12dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/subscription_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
      />

    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/subscription_image"
        android:weightSum="3"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_collection"
        android:padding="2dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:padding="4dp"
           android:orientation="vertical">

            <TextView
                android:id="@+id/subscription_kitchen_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@style/SetPoppinsSemiBoldFont"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subscription_kitchen_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                style="@style/SetPoppinsRegularFont"
                android:textColor="@color/black"
                 />

       </LinearLayout>

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/rating_round">

                <TextView
                    android:id="@+id/rating_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="4.3"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@+id/rating_txt"
                    android:src="@drawable/rating_star" />

            </RelativeLayout>

            <TextView
                android:id="@+id/cost_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SetPoppinsRegularFont"
                android:layout_marginEnd="4dp"
                android:textAlignment="textStart"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/delivery_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SetPoppinsRegularFont"
                android:textAlignment="textStart"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"/>

        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/manage_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/login_btn_bg_shape"
        android:text="Manage Subscription"
        android:layout_centerInParent="true"
        android:layout_below="@+id/details_layout"
        android:textAllCaps="false"
        android:gravity="center"
        android:padding="14dp"
        android:textColor="@color/white"
        android:textSize="14sp" />
</RelativeLayout>
</androidx.cardview.widget.CardView>