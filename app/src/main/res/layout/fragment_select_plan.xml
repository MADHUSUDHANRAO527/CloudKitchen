<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.SelectPlanFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@android:style/Theme.Black.NoTitleBar"
        android:theme="@android:style/Theme.NoTitleBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentStart="true"
                android:src="@drawable/icon_close"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/kitchen_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_below="@+id/toolbar"
        android:text="@string/select_your_plan"
        style="@style/SetPoppinsSemiBoldFont"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:id="@+id/kitchen_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kitchen_title_txt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="12dp">
        <RelativeLayout
            android:id="@+id/wkly_plan"
            android:tag="WEEKLY_PLAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/wkly_sub_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/weekly_subscription"
                style="@style/SetPoppinsRegularFont"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/no_ofmeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@+id/wkly_sub_txt"
                android:text="(6 Meals)"
                android:textAlignment="textStart"
                android:textColor="#818181"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/wk_meal_price_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@+id/no_ofmeals"
                android:text="70"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wk_select_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/plan_btn_bg_shape"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="@string/select"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/kitchen_card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kitchen_card_view"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="12dp">
        <RelativeLayout
            android:id="@+id/monthly_plan"
            android:tag="MONTHLY_PLAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/mnthly_sub_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/monthly_subscription"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                style="@style/SetPoppinsRegularFont"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/monthly_no_ofmeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@+id/mnthly_sub_txt"
                android:text="(6 Meals)"
                android:textAlignment="textStart"
                android:textColor="#818181"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/monthly_meal_price_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_below="@+id/monthly_no_ofmeals"
                android:text="70"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/monthly_select_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/plan_unselect_btn_bg_shape"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="@string/select"
                android:textAllCaps="false"
                android:textColor="#F5BE00"
                android:textSize="14sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/select_menu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/login_btn_bg_shape"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:padding="14dp"
        android:text="@string/select_duration"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>