<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.PlaceOrderFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@android:style/Theme.Black.NoTitleBar"
        android:theme="@android:style/Theme.NoTitleBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentStart="true"
                android:src="@drawable/icon_close"/>
            <TextView
                android:id="@+id/meal_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_toEndOf="@+id/appLogo"
                android:layout_marginStart="12dp"
                style="@style/SetPoppinsRegularFont"
                android:text="@string/select"
                android:layout_centerInParent="true"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">


            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_margin="8dp"
                android:background="@drawable/addres_green_bg_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/baseline_check_circle_24"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wkly_sub_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/deliver_at_home"
                        style="@style/SetPoppinsRegularFont"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/start_date_txt"
                            style="@style/SetPoppinsRegularFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:padding="4dp"
                            android:text="address"
                            android:textAlignment="textStart"
                            android:textColor="#818181"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/end_date_"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/end_date_txt"
                            style="@style/SetPoppinsRegularFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="2dp"
                            android:padding="4dp"
                            android:text="@string/change"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/baseline_calendar_month_24"/>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/select_slot_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/your_total_savings"
                style="@style/SetPoppinsSemiBoldFont"
                android:textAlignment="textStart"
                android:layout_marginTop="18dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/total_saving_bg"
                android:layout_below="@+id/date_layout"
                android:textColor="#507FB1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/select_slot_txt"
                android:weightSum="3"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_collection"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="South Indian"
                        android:textSize="18sp"
                        style="@style/SetPoppinsSemiBoldFont"
                        android:padding="4dp"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/meal_title_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Idly.vada"
                        style="@style/SetPoppinsRegularFont"
                        android:padding="4dp"
                        android:textColor="@color/black"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/added_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/plan_btn_bg_shape"
                            android:gravity="end"
                            android:layout_alignParentEnd="true"
                            android:paddingStart="8dp"
                            android:paddingTop="4dp"
                            android:visibility="visible"
                            android:paddingEnd="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/weekly"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#c0c0c0"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                style="@style/SetPoppinsRegularFont"
                                android:text="@string/subscription"
                                android:padding="4dp"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:id="@+id/wkly_sub_price_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/plan_duration"
                                android:textSize="18sp"
                                android:padding="4dp"
                                style="@style/SetPoppinsRegularFont"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                               />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/delivery_slot"
                                android:textSize="18sp"
                                android:padding="4dp"
                                style="@style/SetPoppinsRegularFont"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                style="@style/SetPoppinsRegularFont"
                                android:text="@string/change"
                                android:padding="4dp"
                                android:textColor="@color/colorPrimaryDark"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 april "
                                style="@style/SetPoppinsRegularFont"
                                android:textSize="18sp"
                                android:padding="4dp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                 />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12:30pm"
                                style="@style/SetPoppinsRegularFont"
                                android:textSize="18sp"
                                android:padding="4dp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                />

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#c0c0c0"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                style="@style/SetPoppinsRegularFont"
                                android:text="@string/monthly_subscription"
                                android:padding="4dp"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/delivery_charges"
                                android:textSize="18sp"
                                android:padding="4dp"
                                style="@style/SetPoppinsRegularFont"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/grand_total"
                                android:textSize="18sp"
                                android:padding="4dp"
                                style="@style/SetPoppinsRegularFont"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/monthly_sub_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                style="@style/SetPoppinsRegularFont"
                                android:text="@string/change"
                                android:padding="4dp"
                                android:textColor="@color/colorPrimaryDark"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10 april "
                                style="@style/SetPoppinsRegularFont"
                                android:textSize="18sp"
                                android:padding="4dp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12:30pm"
                                style="@style/SetPoppinsRegularFont"
                                android:textSize="18sp"
                                android:padding="4dp"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                />

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:background="#c0c0c0"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                style="@style/SetPoppinsRegularFont"
                                android:text="@string/subscription"
                                android:padding="4dp"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/plan_duration"
                                android:textSize="18sp"
                                android:padding="4dp"
                                style="@style/SetPoppinsRegularFont"
                                android:textColor="@color/black"
                                android:textAlignment="center"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                style="@style/SetPoppinsRegularFont"
                                android:text="@string/change"
                                android:padding="4dp"
                                android:textColor="@color/colorPrimaryDark"
                                />



                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




        </RelativeLayout>


    <Button
        android:id="@+id/place_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/login_btn_bg_shape"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:padding="14dp"
        android:text="@string/pay_now"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>