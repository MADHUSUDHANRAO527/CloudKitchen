<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@color/white"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/login_cook" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:layout_weight="1"
        android:clickable="false"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/login"
            style="@style/SetPoppinsSemiBoldFont"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            style="@style/SetPoppinsRegularFont"
            android:text="@string/enter_your_phone_number_to_proceed"
            android:textColor="@color/colorLightColor"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:src="@drawable/india_flag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="+91"
                android:textColor="@color/colorLightColor"
                android:textSize="18sp"
                style="@style/SetPoppinsSemiBoldFont"
                />

            <EditText
                android:id="@+id/ph_num_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/login_et_bg_shape"
                android:padding="8dp"
                style="@style/SetPoppinsLightFont"
                android:inputType="number"
                android:maxLength="10"
                android:hint="Phone Number"
                android:focusableInTouchMode="true"
                android:textIsSelectable="true"
                android:autofillHints="no"
                android:textColor="#000000"
                android:focusable="true"
                android:textSize="16sp"
               />

        </LinearLayout>

        <Button
            android:id="@+id/authenticate_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/login_btn_bg_shape"
            android:text="Authenticate"
            android:textAllCaps="true"
            android:gravity="center"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textSize="18sp" />



        <TextView
            android:id="@+id/trouble_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:padding="8dp"
            style="@style/SetPoppinsLightFont"
            android:layout_marginTop="16dp"
            android:text="Trouble Login?"
            android:textColor="#2D2D2D"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center|start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:padding="8dp"
                style="@style/SetPoppinsLightFont"
                android:text="Terms &amp; Conditions"
                android:textColor="#2D2D2D"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:padding="8dp"
                style="@style/SetPoppinsLightFont"
                android:text="Privacy Policy"
                android:textColor="#2D2D2D"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ProgressBar
            android:id="@+id/loginPbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_atop" />
    </RelativeLayout>
</RelativeLayout>