<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.SelectDurationFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:popupTheme="@android:style/Theme.Black.NoTitleBar"
        android:theme="@android:style/Theme.NoTitleBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_close_24"
                app:tint="@color/black" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/kitchen_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/select_duraiton"
                style="@style/SetPoppinsSemiBoldFont"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@+id/kitchen_title_txt"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/wkly_sub_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/start_date"
                        style="@style/SetPoppinsRegularFont"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <RelativeLayout
                        android:id="@+id/start_date_"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/duration_btn_bg_shape">

                        <TextView
                            android:id="@+id/start_date_txt"
                            style="@style/SetPoppinsRegularFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="2dp"
                            android:padding="4dp"
                            android:text=""
                            android:textAlignment="textStart"
                            android:textColor="#818181"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="4dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/baseline_calendar_month_24"/>

                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/end_date"
                        style="@style/SetPoppinsRegularFont"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>
                    <RelativeLayout
                        android:id="@+id/end_date_"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/duration_btn_bg_shape">

                        <TextView
                            android:id="@+id/end_date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:padding="4dp"
                            android:layout_marginStart="2dp"
                            android:text=""
                            android:textAlignment="textStart"
                            android:textColor="#818181"
                            android:textSize="16sp"
                            style="@style/SetPoppinsRegularFont"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/baseline_calendar_month_24"/>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/select_slot_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/select_slot"
                style="@style/SetPoppinsSemiBoldFont"
                android:textAlignment="textStart"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/date_layout"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_slot_txt"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">


                <TextView
                    style="@style/SetPoppinsRegularFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:paddingEnd="8dp"
                    android:layout_marginStart="4dp"
                    android:text="Slot - 1"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/select_btn_first_slot_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/duration_btn_bg_shape"
                    android:orientation="horizontal"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:layout_weight="1"
                    android:paddingEnd="10dp"
                    android:paddingBottom="4dp">

                    <TextView
                        style="@style/SetPoppinsRegularFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=" 12:30 P.M - 01.00 P.M"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/select_btn_First_slot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/plan_unselect_btn_bg_shape"
                        android:paddingStart="12dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="4dp"
                        android:tag="12:30 P.M - 01.00 P.M"
                        android:text="@string/select"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/SetPoppinsRegularFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:text="Slot - 2"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:id="@+id/select_btn_two_slot_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/duration_btn_bg_shape"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="4dp"
                        android:layout_weight="1"
                        android:paddingEnd="10dp"
                        android:paddingBottom="4dp">

                        <TextView
                            style="@style/SetPoppinsRegularFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:padding="4dp"
                            android:text="01:00 P.M - 01.30 P.M"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/select_btn_two_slot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/plan_unselect_btn_bg_shape"
                            android:paddingStart="12dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="4dp"
                            android:tag="01:00 P.M - 01.30 P.M"
                            android:text="@string/select"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:visibility="visible" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/SetPoppinsRegularFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:text="Slot - 3"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:id="@+id/select_btn_three_slot_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/duration_btn_bg_shape"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="4dp"
                        android:layout_weight="1"
                        android:paddingEnd="10dp"
                        android:paddingBottom="4dp">

                        <TextView
                            style="@style/SetPoppinsRegularFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:padding="4dp"
                            android:text="01:30 P.M - 02.00 P.M"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/select_btn_three_slot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/plan_unselect_btn_bg_shape"
                            android:paddingStart="12dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="4dp"
                            android:tag="1:30 P.M - 02.00 P.M"
                            android:text="@string/select"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:visibility="visible" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/SetPoppinsRegularFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:paddingEnd="8dp"
                        android:text="Slot - 4"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:id="@+id/select_btn_Fourth_slot_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/duration_btn_bg_shape"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="4dp"
                        android:layout_weight="1"
                        android:paddingEnd="10dp"
                        android:paddingBottom="4dp">

                        <TextView
                            style="@style/SetPoppinsRegularFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:padding="4dp"
                            android:text="02:00 P.M - 02.30 P.M"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/select_btn_Fourth_slot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/plan_unselect_btn_bg_shape"
                            android:paddingStart="12dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="4dp"
                            android:tag="01:00 P.M - 01.30 P.M"
                            android:text="@string/select"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:visibility="visible" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    <Button
        android:id="@+id/place_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/login_btn_bg_shape"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:padding="14dp"
        android:text="@string/proceed"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>